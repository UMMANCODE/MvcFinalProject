@model List<Course>
@foreach (var course in Model) {
  <div class="col-md-4 col-sm-6 col-xs-12">
    <div class="single-course mb-70">
      <div class="course-img">
        <a asp-action="details" asp-controller="course" asp-route-id="@course.Id">
          <img src="~/img/course/@course.ImageName" alt="course">
          <div class="course-hover">
            <i class="fa fa-link"></i>
          </div>
        </a>
      </div>
      <div class="course-content">
        <h3><a asp-action="details" asp-controller="course" asp-route-id="@course.Id">@course.Name</a></h3>
        <p>@course.Description</p>
        <a class="default-btn" asp-action="details" asp-controller="course" asp-route-id="@course.Id">read more</a>
      </div>
    </div>
  </div>
}

