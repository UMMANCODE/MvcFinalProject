@inject StaticService service
@{
	var settings = service.GetSettings();
}
<!doctype html>
<html class="no-js" lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="x-ua-compatible" content="ie=edge">
	<title>@settings["Title"]</title>
	<meta name="description" content="">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="apple-touch-icon" href="apple-touch-icon.png">
	<!-- Place favicon.ico in the root directory -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="~/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/animate.css">
	<link rel="stylesheet" href="~/css/meanmenu.css">
	<link rel="stylesheet" href="~/css/magnific-popup.css">
	<link rel="stylesheet" href="~/css/owl.carousel.min.css">
	<link rel="stylesheet" href="~/css/font-awesome.min.css">
	<link rel="stylesheet" href="~/css/et-line-icon.css">
	<link rel="stylesheet" href="~/css/reset.css">
	<link rel="stylesheet" href="~/css/ionicons.min.css">
	<link rel="stylesheet" href="~/css/material-design-iconic-font.min.css">
	<link rel="stylesheet" href="~/css/style.css">
	<link rel="stylesheet" href="~/css/responsive.css">
	<script src="~/js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
	<header class="top">
		@if (ViewBag.Render != "notrender") {
			<div class="header-top">
				<div class="container">
					<div class="row">
						<div class="col-md-8 col-sm-8 col-xs-12">
							<div class="header-top-left">
								<p>HAVE ANY QUESTION ?  @settings["TopPhone"]</p>
							</div>
						</div>
						<div class="col-md-4 col-sm-4 col-xs-12">
							<div class="header-top-right text-right">
								<ul>
									@if (User.Identity.IsAuthenticated && User.IsInRole("user")) {
										<li><a asp-controller="auth" asp-action="logout">logout</a></li>
										<li><a asp-controller="user" asp-action="profile">profile</a></li>
									}
									else {
										<li><a asp-controller="auth" asp-action="login">login</a></li>
										<li><a asp-controller="auth" asp-action="register">signup</a></li>
									}
								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
		}
		<div class="header-area two header-sticky">
			<div class="container">
				<div class="row">
					<div class="col-md-3 col-sm-3 col-xs-6">
						<div class="logo">
							<a asp-action="index" asp-controller="home"><img src='~/img/logo/@settings["SecondLogo"]' alt="eduhome"></a>
						</div>
					</div>
					<div class="col-md-9 col-sm-9 col-xs-6">
						<div class="content-wrapper text-right">
							<!-- Main Menu Start -->
							<div class="main-menu">
								<nav style="display: block;">
									<ul>
										<li>
											<a asp-action="index" asp-controller="home">Home</a>
										</li>
										<li><a asp-action="about" asp-controller="home">About</a></li>
										<li>
											<a asp-action="index" asp-controller="course">courses</a>
										</li>
										<li>
											<a asp-action="index" asp-controller="event">event</a>
										</li>
										<li class="hidden-sm">
											<a asp-action="index" asp-controller="teacher">teacher</a>
										</li>
										<li>
											<a asp-action="index" asp-controller="blog">blog</a>
										</li>
										<li>
											<a asp-action="contact" asp-controller="home">Contact</a>
										</li>
									</ul>
								</nav>
							</div>
							@if (ViewBag.Render != "notrender") {
								<!--Search Form Start-->
								<div class="search-btn">
									<ul data-toggle="dropdown" class="header-search search-toggle">
										<li class="search-menu">
											<i class="fa fa-search"></i>
										</li>
									</ul>
									<div class="search">
										<div class="search-form">
											<input class="search-input" type="search" placeholder="Search here..." name="search">
											<ul class="list-group search-results">

											</ul>
										</div>
									</div>
								</div>
								<!--End of Search Form-->
							}
							<!-- Main Menu End -->
						</div>
					</div>
					<div class="col-xs-12">
						<div class="mobile-menu hidden-lg hidden-md hidden-sm"></div>
					</div>
				</div>
			</div>
		</div>
	</header>
	<!-- Header Area End -->
	@RenderBody()
	<!-- Subscribe Start -->
	<div class="subscribe-area pt-60 pb-70">
		<div class="container">
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<div class="subscribe-content section-title text-center">
						<h2>subscribe our newsletter</h2>
						<p>@settings["SubscribeText"] </p>
					</div>
					<div class="newsletter-form mc_embed_signup">
						<form method="post" asp-action="subscribe" asp-controller="home" id="Subscribe-Form">
							<div class="form">
								<input type="email" name="Email" id="EmailAddress-Input" placeholder="Enter your e-mail address">
								<button type="submit" id="Subscribe-Btn" class="default-btn" type="submit">subscribe</button>
							</div>
						</form>
						<h3>@TempData["error"]</h3>
						<!-- mailchimp-alerts Start -->
						<div class="mailchimp-alerts">
							<div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
							<div class="mailchimp-success"></div><!-- mailchimp-success end -->
							<div class="mailchimp-error"></div><!-- mailchimp-error end -->
						</div>
						<!-- mailchimp-alerts end -->
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Subscribe End -->
	<!-- Footer Start -->
	<footer class="footer-area">
		<div class="main-footer">
			<div class="container">
				<div class="row">
					<div class="col-md-4 col-sm-6 col-xs-12">
						<div class="single-widget pr-60">
							<div class="footer-logo pb-25">
								<a asp-controller="home" asp-action="index"><img src="~/img/logo/footer-logo.png" alt="eduhome"></a>
							</div>
							<p>I must explain to you how all this mistaken idea of denoung pleure and praising pain was born and give you a coete account of the system. </p>
							<div class="footer-social">
								<ul>
									<li><a href="@settings["FooterFacebookUrl"]"><i class="@settings["FooterFacebookName"]"></i></a></li>
									<li><a href="@settings["FooterTwitterUrl"]"><i class="@settings["FooterTwitterName"]"></i></a></li>
									<li><a href="@settings["FooterPinterestUrl"]"><i class="@settings["FooterPinterestName"]"></i></a></li>
									<li><a href="@settings["FooterVimeoUrl"]"><i class="@settings["FooterVimeoName"]"></i></a></li>
								</ul>
							</div>
						</div>
					</div>
					<div class="col-md-3 col-sm-6 col-xs-12">
						<div class="single-widget">
							<h3>information</h3>
							<ul>
								<li><a href="#">Addmission</a></li>
								<li><a href="#">Academic Calender</a></li>
								<li><a asp-controller="event" asp-action="index">Event List</a></li>
								<li><a href="#">Hostel &amp; Dinning</a></li>
								<li><a href="#">TimeTable</a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-2 col-sm-6 col-xs-12">
						<div class="single-widget">
							<h3>useful links</h3>
							<ul>
								<li><a asp-action="index" asp-controller="course">our courses</a></li>
								<li><a asp-action="about" asp-controller="home">about us</a></li>
								<li><a asp-action="index" asp-controller="teacher">teachers &amp; faculty</a></li>
								<li><a href="#">teams &amp; conditions</a></li>
								<li><a asp-action="index" asp-controller="event">our events</a></li>
							</ul>
						</div>
					</div>
					<div class="col-md-3 col-sm-6 col-xs-12">
						<div class="single-widget">
							<h3>get in touch</h3>
							<p>@settings["FooterAddress"]</p>
							<p>@settings["FooterPhone1"]<br>@settings["FooterPhone2"]</p>
							<p>@settings["FooterInfoEmail"]</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="footer-bottom text-center">
			<div class="container">
				<div class="row">
					<div class="col-xs-12">
						<p>Copyright ©@DateTime.Now.ToString("yyyy")</p>
					</div>
				</div>
			</div>
		</div>
	</footer>
	<!-- Footer End -->

	<!-- Toast -->
	@Html.Partial("_ToastPartial")

	<!-- Scripts -->
	<script src="~/js/vendor/jquery-1.12.0.min.js"></script>
	<script src="~/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.meanmenu.js"></script>
	<script src="~/js/jquery.magnific-popup.js"></script>
	<script src="~/js/ajax-mail.js"></script>
	<script src="~/js/owl.carousel.min.js"></script>
	<script src="~/js/jquery.mb.YTPlayer.js"></script>
	<script src="~/js/jquery.nicescroll.min.js"></script>
	<script src="~/js/plugins.js"></script>
	<script src="~/js/main.js"></script>
	<script src="~/js/custom.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
