@model ResetPasswordViewModel
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
	<div class="banner-area text-center">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="banner-content-wrapper">
						<div class="banner-content">
							<h2>reset password</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Area End -->
<!-- Reset Password start -->
<div class="login-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>reset password</h2>
							<span>Confirm your new password</span>
						</div>
						<div class="login-form">
							<form method="post">
								<input asp-for="NewPassword" placeholder="NewPassword">
								<span class="text-danger" asp-validation-for="NewPassword"></span>
								<input asp-for="ConfirmNewPassword" placeholder="ConfirmNewPassword">
								<span class="text-danger" asp-validation-for="ConfirmNewPassword"></span>
								<input type="hidden" name="email" value="@TempData["email"]" />
								<input type="hidden" name="token" value="@TempData["token"]" />
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								<div class="button-box">
									<button type="submit" class="default-btn">Reset Password</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Reset Password end -->
