@model UserLoginViewModel
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
	<div class="banner-area text-center">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="banner-content-wrapper">
						<div class="banner-content">
							<h2>login</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Area End -->
<!-- Login start -->
<div class="login-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-6 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>login</h2>
							<span>Please login using account detail below.</span>
						</div>
						<div class="login-form">
							<form method="post">
								<input asp-for="UserName" placeholder="Username">
								<span class="text-danger" asp-validation-for="UserName"></span>
								<input asp-for="Password" placeholder="Password">
								<span class="text-danger" asp-validation-for="Password"></span>
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								<div class="button-box">
									<div class="login-toggle-btn">
										<input asp-for="RememberMe" id="rememberme">
										<label asp-for="RememberMe">Remember me</label>
										<a asp-action="forgetpassword">Forgot Password?</a>
									</div>
									<button type="submit" class="default-btn">Login</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-6 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>External login</h2>
							<span>Please login with external login providers below.</span>
						</div>
						@if (Model.Schemes != null && Model.Schemes.Count() > 0) {
							<div class="d-flex flex-column align-items-center">
								@foreach (var scheme in Model.Schemes) {
									<form asp-controller="auth" asp-action="externallogin" method="post" class="w-100 text-center">
										<button type="submit" name="provider" value="@scheme.Name" class="btn btn-primary w-50 mb-2">@scheme.DisplayName</button>
									</form>
								}
							</div>
						}
						else {
							<p>There are no external authentication services configured.</p>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Login end -->
