@model UserRegisterViewModel
<!-- Banner Area Start -->
<div class="banner-area-wrapper">
	<div class="banner-area text-center">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="banner-content-wrapper">
						<div class="banner-content">
							<h2>sign up</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>sign up</h2>
							<span>Create an account</span>
						</div>
						<div class="login-form">
							<form method="post">
								<input asp-for="FullName" placeholder="FullName">
								<span class="text-danger" asp-validation-for="FullName"></span>
								<input asp-for="UserName" placeholder="UserName">
								<span class="text-danger" asp-validation-for="UserName"></span>
								<input asp-for="EmailAddress" placeholder="EmailAddress">
								<span class="text-danger" asp-validation-for="EmailAddress"></span>
								<input asp-for="Password" placeholder="Password">
								<span class="text-danger" asp-validation-for="Password"></span>
								<input asp-for="ConfirmPassword" placeholder="Confirm Password">
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
								<div class="text-danger" asp-validation-summary="ModelOnly"></div>
								<div class="button-box">
									<button type="submit" class="default-btn">sign up</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Register end -->