@model Testimonial
@{
  TempData["Page"] = "Edit";
}
<form method="post" class="col-md-6 mx-auto" enctype="multipart/form-data">
  <div class="form-group">
    <input asp-for="Text" class="form-control" id="Text" placeholder="Text">
    <span class="text-danger" asp-validation-for="Text"></span>
  </div>
  <div class="form-group">
    <input asp-for="Author" class="form-control" id="Author" placeholder="Author">
    <span class="text-danger" asp-validation-for="Author"></span>
  </div>
  <div class="form-group">
    <input asp-for="Position" class="form-control" id="Position" placeholder="Position">
    <span class="text-danger" asp-validation-for="Position"></span>
  </div>
  <div class="form-group">
    <input asp-for="Order" class="form-control" id="Order" placeholder="Order">
    <span class="text-danger" asp-validation-for="Order"></span>
  </div>
  <div class="form-group">
    <input asp-for="ImageFile" class="form-control imgInput">
    <input type="hidden" name="ImageName" value="@Model.ImageName" placeholder="ImageFile" />
    <div class="preview-box">
      <img width="200" class="previewImg" src="~/img/testimonial/@Model.ImageName" />
    </div>
    <span class="text-danger" asp-validation-for="ImageFile"></span>
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>

@section Scripts {
  <script src="~/manage/js/custom.js"></script>
}