@model Blog
@{
  TempData["Page"] = "Edit";
}
<form method="post" class="col-md-6 mx-auto" enctype="multipart/form-data">
  <div class="form-group">
    <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
    <span class="text-danger" asp-validation-for="Name"></span>
  </div>
  <div class="form-group">
    <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
    <span class="text-danger" asp-validation-for="Description"></span>
  </div>
  <div class="form-group">
    <input asp-for="Author" class="form-control" id="Author" placeholder="Author">
    <span class="text-danger" asp-validation-for="Author"></span>
  </div>
  <div class="form-group">
    <label asp-for="CategoryId">Category Id</label>
    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>
  </div>
  <div class="form-group">
    <label asp-for="TagIds">BlogTags</label>
    <select asp-for="TagIds" class="form-control" id="TagIds" asp-items="ViewBag.Tags"></select>
    <span class="text-danger" asp-validation-for="TagIds"></span>
  </div>
  <div class="form-group">
    <input asp-for="Date" class="form-control" id="Date" placeholder="Date">
    <span class="text-danger" asp-validation-for="Date"></span>
  </div>
  <div class="form-group">
    <input asp-for="ImageFile" class="form-control imgInput">
    <input type="hidden" name="ImageName" value="@Model.ImageName" placeholder="ImageFile" />
    <div class="preview-box">
      <img width="200" class="previewImg" src="~/img/blog/@Model.ImageName" />
    </div>
    <span class="text-danger" asp-validation-for="ImageFile"></span>
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>

@section Scripts {
  <script src="~/manage/js/custom.js"></script>
}