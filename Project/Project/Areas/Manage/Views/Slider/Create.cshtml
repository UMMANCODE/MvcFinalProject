@model Slider
@{
  TempData["Page"] = "Create";
}
<form method="post" class="col-md-6 mx-auto" enctype="multipart/form-data">
  <div class="form-group">
    <input asp-for="Title" class="form-control" id="Title" placeholder="Title">
    <span class="text-danger" asp-validation-for="Title"></span>
  </div>
  <div class="form-group">
    <input asp-for="Description" class="form-control" id="Description" placeholder="Description">
    <span class="text-danger" asp-validation-for="Description"></span>
  </div>
  <div class="form-group">
    <input asp-for="BtnText" class="form-control" id="BtnText" placeholder="BtnText">
    <span class="text-danger" asp-validation-for="BtnText"></span>
  </div>
  <div class="form-group">
    <input asp-for="BtnUrl" class="form-control" id="BtnUrl" placeholder="BtnUrl">
    <span class="text-danger" asp-validation-for="BtnUrl"></span>
  </div>
  <div class="form-group">
    <input asp-for="Order" class="form-control" id="Order" placeholder="Order">
    <span class="text-danger" asp-validation-for="Order"></span>
  </div>
  <div class="form-group">
    <input asp-for="ImageFile" class="form-control imgInput" placeholder="Image">
    <div class="preview-box">
      <img width="200" class="previewImg"/>
    </div>
    <span class="text-danger" asp-validation-for="ImageFile"></span>
  </div>
  <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
  <script src="~/manage/js/custom.js"></script>
}